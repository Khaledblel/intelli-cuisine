<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <ImageView
            android:id="@+id/imgAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_account"
            app:tint="@color/dark_text"
            android:background="@drawable/bg_input_rounded"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvGreeting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Bonjour, Utilisateur"
            android:textSize="16sp"
            android:textColor="@color/dark_text"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toEndOf="@id/imgAvatar"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar"
            app:layout_constraintEnd_toStartOf="@id/imgNotification"/>

        <ImageView
            android:id="@+id/imgNotification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_popup_reminder"
            app:tint="@color/dark_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/imgAvatar"
            app:layout_constraintBottom_toBottomOf="@id/imgAvatar"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardHero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/beige_card_bg"
            app:layout_constraintTop_toBottomOf="@id/imgAvatar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvHomeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_card_title"
                    android:textSize="22sp"
                    android:textColor="#2D3A28"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_card_subtitle"
                    android:textSize="14sp"
                    android:textColor="#5D6D56"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="24dp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnGenerate"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="@string/home_generate_btn"
                    android:textColor="@color/yellow_btn_text"
                    android:textStyle="bold"
                    android:background="@drawable/bg_input_rounded"
                    android:backgroundTint="@color/yellow_btn_bg"
                    android:textAllCaps="false"
                    android:stateListAnimator="@null"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvRecentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_recent_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_text"
            android:fontFamily="serif"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardHero"/>

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_see_all"
            android:textSize="14sp"
            android:textColor="#009688"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvRecentTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentRecipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe_card"
            app:layout_constraintTop_toBottomOf="@id/tvRecentTitle"/>

        <TextView
            android:id="@+id/tvInventoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon Inventaire"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_text"
            android:fontFamily="serif"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvRecentRecipes"/>

        <TextView
            android:id="@+id/tvInventorySeeAll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_see_all"
            android:textSize="14sp"
            android:textColor="#009688"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvInventoryTitle"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvInventoryHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="80dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_recipe_card"
            app:layout_constraintTop_toBottomOf="@id/tvInventoryTitle"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>